{
  "name": "Wikontext",
  "author": "Ross Altman",
  "version": "0.2",
  "manifest_version": 3,
  "description": "Show the most relevant parts of a linked Wikipedia article with the hover of your mouse.",
  "homepage_url": "https://github.com/knowbodynos/wikontext",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "permissions": [],
  "host_permissions": [
    "*://*.wikipedia.org/*"
  ],
  "background": {
    "service_worker": "src/background.js"
  },
  "action": {
    "default_title": "Wikontext",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.wikipedia.org/*"
      ],
      "js": [
        "src/inject.js"
      ]
    }
  ]
}